{
  "name": "@asala/cli",
  "version": "0.0.1",
  "description": "Asala - Command-line tool for content verification and signing",
  "main": "dist/index.js",
  "bin": {
    "asala": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "pkg": "pkg . --out-path=../bin",
    "pkg:win": "pkg . --targets node18-win-x64 --out-path=../bin",
    "pkg:mac": "pkg . --targets node18-macos-x64 --out-path=../bin",
    "pkg:linux": "pkg . --targets node18-linux-x64 --out-path=../bin",
    "pkg:all": "pkg . --targets node18-win-x64,node18-macos-x64,node18-linux-x64 --out-path=../bin"
  },
  "dependencies": {
    "@asala/core": "^0.0.1",
    "commander": "^11.1.0",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "inquirer": "^8.2.6",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^8.2.10",
    "typescript": "^5.3.0",
    "pkg": "^5.8.1"
  },
  "license": "GPL-3.0",
  "pkg": {
    "scripts": [
      "dist/**/*.js"
    ],
    "assets": [
      "node_modules/**/*"
    ],
    "targets": [
      "node18-win-x64",
      "node18-macos-x64",
      "node18-linux-x64"
    ],
    "outputPath": "../bin"
  }
}